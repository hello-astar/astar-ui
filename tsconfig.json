{
  "compilerOptions": {
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitOnError": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "allowJs": true,
      "noEmit": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "paths": {
        "@/*": ["./src/*"]
      }
  },
  "include": [
      "src/**/*.ts", "types", "src/**/*.d.ts", "src/**/*.tsx", "src/components/**/*.vue"
  ],
  "exclude": [
      "node_modules",
      "build"
  ]
}
